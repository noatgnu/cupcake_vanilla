FROM nginx:alpine

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Create webroot for ACME challenges
RUN mkdir -p /var/www/certbot && chown -R nginx:nginx /var/www/certbot

# Note: Configuration will be mounted from docker-compose volume
# This allows switching between different configs without rebuild

EXPOSE 80 443
CMD ["nginx", "-g", "daemon off;"]
